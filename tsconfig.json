{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "esnext",
    "verbatimModuleSyntax": false,
    "allowJs": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "esnext"
    ],
    "declaration": true
  },
  "include": [
    "./src/"
  ]
}
